<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#f5f5f5">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="strongSwan L2TP/IPSec VPN"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:textColor="#1976D2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enterprise-grade VPN connection"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="#666666" />

        <!-- Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”’"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Status: Disconnected"
                android:textSize="16sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Configuration Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VPN Configuration"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="#333333" />

        <!-- Server Input -->
        <EditText
            android:id="@+id/editServer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:hint="Server Address"
            android:inputType="textUri"
            android:maxLines="1"
            android:padding="16dp"
            android:background="@android:drawable/edit_text"
            android:imeOptions="actionNext" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:hint="Username"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="16dp"
            android:background="@android:drawable/edit_text"
            android:imeOptions="actionNext" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="16dp"
            android:background="@android:drawable/edit_text"
            android:imeOptions="actionNext" />

        <!-- PSK Input -->
        <EditText
            android:id="@+id/editPsk"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="32dp"
            android:hint="Pre-shared Key (PSK)"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="16dp"
            android:background="@android:drawable/edit_text"
            android:imeOptions="actionDone" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Connect"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="#1976D2" />

            <Button
                android:id="@+id/btnDisconnect"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Disconnect"
                android:textSize="16sp"
                android:textColor="#1976D2"
                android:background="#FFFFFF"
                android:layout_marginLeft="8dp" />

        </LinearLayout>

        <!-- Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3F2FD"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”’ strongSwan L2TP/IPSec VPN"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This app uses strongSwan for enterprise-grade L2TP/IPSec VPN connections with full protocol implementation including IKE negotiation, ESP encryption, and PPP authentication."
                android:textSize="12sp"
                android:textColor="#1565C0"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Technical Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Features: IKEv2 â€¢ ESP Encryption â€¢ CHAP Authentication â€¢ Packet Routing â€¢ Auto Reconnection"
            android:textSize="10sp"
            android:textColor="#888888"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>